snippet edit_text "xml_android" i
<EditText
    android:id="@+id/input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"
    android:text=""
    android:hint="hint"
    android:textAlignment="viewStart|start"
    android:textSize="36sp" />
endsnippet

snippet recycler_view "xml_android" i
<android.support.v7.widget.RecyclerView
    android:id="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"/>
endsnippet

snippet recycler_view_layout_manager "xml_android" i
app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
endsnippet

snippet var "xml_android" i
<variable
    name="${1:VAR}"
    type="com.sunzhongwei.app.data.$1"/>
endsnippet

snippet style "xml_android" i
style="@style/${1:StyleName}"

// res/values/styles.xml
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="$1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#008</item>
    </style>
</resources>
endsnippet

