snippet scroll_vertical "html_wxml" i
<view class="sv_wrap">
    <scroll-view class="sv" scroll-y="true" bindscrolltolower="fetchMore" scroll-top="{{scrollTop}}">
        <navigator wx:for="{{items}}" wx:for-item="item" wx:key="*this" url="">
        </navigator>
        <view class="tips">
            <text wx:if="{{ !items.length }}">暂无数据</text>
            <text wx:elif="{{ no_more }}">没有更多了</text>
            <text wx:else>上拉查看更多</text>
        </view>
    </scroll-view>
</view>

// wxss
Page {
  display: flex;
  height: 100%;
  flex-direction: column;
}

.sv_wrap {
  flex: 1;
  height: 200px; /* 黑科技，任意值 */
}

.sv {
  height: 100%;
}

.tips {
	font-size: 24rpx;
	color: rgb(179, 179, 179);
	display: flex;
	justify-content: center;
	margin: 1em auto;
}

// js
items: [],
page: 1,
size: 30,
no_more: false,
scrollTop: 0,

fetchMore: function() {
  if (this.data.no_more) {
    return;
  }

  let page = this.data.page + 1;
  this.setData({
    page: page
  })
  this.getItems();
},

getItems: function() {
  app.http({
    url: "/items",
    method: "GET",
    param: {
      page: this.data.page.toString(),
      pageSize: this.data.size.toString(),
    }
  }).then(res => {
    let items = this.data.items;
	let data = res.data.data;
    if (data.length) {
      this.setData({
        items: items.concat(data)
      })
    }
    if (data.length < this.data.size) {
      this.setData({
        no_more: true
      })
    }
  });
},

reset: function() {
  this.setData({
    items: [],
    page: 1,
    no_more: false,
    scrollTop: 0,
  })
  this.getItems();
},
endsnippet

