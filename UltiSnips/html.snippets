snippet html "html" b
<!DOCTYPE html>
<html lang="zh-CN">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Index Page</title>
	<meta name="description" content="">
	<meta name="keywords" content="">

	<!-- Set render engine for 360 browser -->
	<meta name="renderer" content="webkit">

	<!-- 禁止百度移动搜索转码 -->
	<meta http-equiv="Cache-Control" content="no-transform" /> 
	<meta http-equiv="Cache-Control" content="no-siteapp" /> 

	<!--[if lt IE 9]>
	<script src="//cdn.bootcss.com/html5shiv/r29/html5.min.js"></script>
	<![endif]-->
</head>

<body>
</body>

</html>
endsnippet

snippet email "Description" i
<a href="mailto:${1:EMAIL_ADDRESS}">$1</a>
endsnippet

snippet tel "Description" i
<a href="tel:${1:TEL_NUMBER}">$1</a>
endsnippet

snippet t "timestamp" i
`date +%Y%m%d%H%M`
endsnippet

snippet i "iconfont.cn" i
<i class="iconfont">${1:VALUE}</i>
endsnippet

snippet nofollow "Description" i
<a href="${1:LINK}" rel="nofollow" target="_blank">${2:SITE_NAME}</a>
endsnippet

