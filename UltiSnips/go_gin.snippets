snippet gin "go_gin" i
"github.com/gin-gonic/gin"
endsnippet

snippet arg "go_gin" i
c.Param("${1:ARG}")     // /api/:arg
c.DefaultQuery("${2:ARG}", "")      // /api?arg=N
endsnippet

snippet gin_api "go_gin" i
func ${1:NAME}(c *gin.Context) {
    uid, ok := c.Get("uid")
	id, _ := strconv.Atoi(c.Param("id"))
	var activity models.WxActivity
	models.GormDB.First(&activity, id)

	c.JSON(http.StatusOK, gin.H{
		"err_code": http.StatusOK,
		"err_msg":  "OK",
		"data":     activity,
	})
}
endsnippet
