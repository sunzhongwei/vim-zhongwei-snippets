snippet if_thinkphp "html_thinkphp" i
<if condition="($name eq 1) OR ($name gt 100) "> value1
<elseif condition="$name eq 2"/>value2
<else /> value3
</if>
endsnippet

snippet isset_thinkphp "html_thinkphp" i
<present name="${1:VAR}">
<else/>
</present>
endsnippet

snippet foreach_thinkphp "html_thinkphp" i
<foreach name="list" item="vo" key="k" >
	{$k}|{$vo}
</foreach>
endsnippet
