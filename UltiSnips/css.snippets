snippet comment "Description" b
<div class="comment card clear">
	<div class="comment-avatar">
		<img src="{{ Utils::get_gavatar($comment->email) }}" alt="">
	</div>
	<div class="comment-main">
		<p>
			<a href="{{ $comment->blog_url }}" rel="nofollow" target="_blank" class="comment-author">
				{{ trim($comment->nickname) }}
			</a>
			<span class="comment-time metadata">{{ Utils::time_since($comment->created_at) }}</span>
		</p>
		<pre class="comment-content">{{ $comment->content }}</pre>
	</div>
</div>
endsnippet
